{% extends 'BlogBlogBundle::layout.html.twig' %}

{#{% block title %}{{ post.title }}{% endblock %}#}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/blogblog/css/showPost.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <article class="post">
            <h2>{{ post.title }}</h2>
            <div class="date">
                    <time datetime="{{ post.createdAt|date('c') }}">{{ post.createdAt|date('l, F j, Y') }}
                    </time>
                </div>

            <img src="{{ asset(['images/', post.image]|join) }}" alt="{{ post.title }} image not found" class="large" />
            <div>
                <p>{{ post.post }}</p>
            </div>
        </article>
    </div>
{% endblock %}

