<section class="section">
    <section>
        <h1>Popular Posts</h1>
        {% for popular in popularPosts %}
            {{ popular.title }}
        {% endfor %}
    </section>
    <section>
        <h1>Last Posts</h1>
        {% for last in lastPosts %}
            {{ last.title }}
        {% endfor %}
    </section>
    <section>
        <header>
            <h3>Tag Cloud</h3>
        </header>
        <div class="tags">
            {% for tag, weight in tags %}
            <span class="weight-{{ weight }}">{{ tag }}</span>
            {% else %}
        <p>There are no tags</p>
        {% endfor %}
        </div>
    </section>
</section>