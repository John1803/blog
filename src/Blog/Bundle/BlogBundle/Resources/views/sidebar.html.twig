<section class="section">
    <section>
        {% for popular in popularPosts %}
            <a href="">{{ popular.title }}
        {% endfor %}
    </section>
    <section>
        <header>
            <h3>Tag Cloud</h3>
        </header>
        <div class="tags">
            {% for tag, weight in tags %}
            <span class="weight-{{ weight }}">{{ tag }}</span>
            {% else %}
        <p>There are no tags</p>
        {% endfor %}
        </div>
    </section>
</section>